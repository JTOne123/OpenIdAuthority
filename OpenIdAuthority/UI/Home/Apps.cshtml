@model IEnumerable<SimpleIAM.OpenIdAuthority.Models.App>
@{
    ViewData["Title"] = "Apps";
}

<h2>Apps</h2>

<div class="apps">
    @foreach (var app in Model)
    {
        <div class="app">
            <a href="@app.Uri">
                <img src="@app.LogoUri" />
                <span class="appname">@app.Name</span>
            </a>
        </div>
    }
</div>

