@model SimpleIAM.OpenIdAuthority.UI.Authenticate.SignInViewModel
@{
    ViewData["Title"] = "Sign In";
}

<div class="focusBox focusBox-centered">
    <h2 class="focusBox_title">Sign In</h2>
        <form method="post">
            <div class="field field-stacked form_row">
                <label asp-for="Email" class="field_label">Email</label>
                <input class="field_element field_element-fullWidth" type="email" asp-for="Email" placeholder="email" autofocus />
                <span asp-validation-for="Email" class="field_error"></span>
            </div>
            <div class="field field-stacked form_row" style="display:none">
                <label asp-for="LeaveBlank" class="field_label">Leave blank</label>
                <input class="field_element field_element-fullWidth" type="text" asp-for="LeaveBlank" placeholder="leave blank" autocomplete="off" />
                <span asp-validation-for="LeaveBlank" class="field_error"></span>
            </div>
            <div class="field field-stacked form_row">
                <input type="submit" value="Get sign in code" class="field_element field_element-fullWidth field_element-tall" />
            </div>
        </form>

        <p class="hint">
            <a asp-action="SignInPass" asp-route-returnUrl="@Model.ReturnUrl">Sign in with password</a>
        </p>
    </div>
</div>
