@model SimpleIAM.OpenIdAuthority.UI.Authenticate.SignInCodeViewModel
@{
    ViewData["Title"] = "Sign In with Code";
}


<div class="focusBox focusBox-centered">
    @if (Model.Email != null)
    {
    <h2 class="focusBox_title">Check Your Email</h2>
    }
    else
    {
    <h2 class="focusBox_title">Sign In with Code</h2>
    }
    <form method="post">
        @if (Model.Email != null)
        {
            <div class="field">
                <div class="displayemail" style="font-weight:bold; padding:0.8em 0; text-align:center;">@Model.Email</div>
                <input type="hidden" asp-for="Email" />
            </div>
        }
        else
        {
            <div class="field field-stacked form_row">
                <label asp-for="Email" class="field_label">Email</label>
                <input class="field_element field_element-fullWidth" type="email" asp-for="Email" placeholder="email" autofocus />
                <span asp-validation-for="Email" class="field_error"></span>
            </div>
        }
        <div class="field field-stacked form_row">
            <label asp-for="OneTimeCode" class="field_label">Enter One Time Code</label>
            @if (Model.Email != null)
            {
                <input class="field_element field_element-fullWidth" type="text" asp-for="OneTimeCode" placeholder="000000" maxlength="8" autofocus />
            }
            else
            {
                <input class="field_element field_element-fullWidth" type="text" asp-for="OneTimeCode" placeholder="000000" maxlength="8" />
            }
            <span asp-validation-for="OneTimeCode" class="field_error"></span>
        </div>
        <div class="field field-stacked form_row" style="display:none">
            <label asp-for="LeaveBlank" class="field_label">Leave blank</label>
            <input type="text" asp-for="LeaveBlank" placeholder="leave blank" autocomplete="off" />
            <span asp-validation-for="LeaveBlank" class="field_error"></span>
        </div>
        <div class="field form_row">
            <input type="submit" value="Sign in" class="field_element field_element-fullWidth field_element-tall" />
        </div>
        @await Html.PartialAsync("_StaySignedIn", new SimpleIAM.OpenIdAuthority.UI.Authenticate.SessionLengthViewModel(Model.SessionLengthMinutes))

    </form>

    <p class="hint" style="text-align:center">
        <a asp-action="SignIn">Get a new code</a>
        &bull;
        <a href="#emailhelp">Not receiving emails?</a>
    </p>
    <p class="hint" style="text-align:center">
        <a asp-action="SignInPass">Sign in with password</a>
    </p>

    @await Html.PartialAsync("_EmailHelp")

</div>