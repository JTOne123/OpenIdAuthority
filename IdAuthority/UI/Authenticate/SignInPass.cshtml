@model SimpleIAM.IdAuthority.UI.Authenticate.SignInPassViewModel
@{
    ViewData["Title"] = "Sign In";
}

<div class="signin">
    <h2>Sign In</h2>
    <form method="post">
        <div class="field">
            <label asp-for="Email">Email</label>
            @if (Model.Email != null)
            {
            <input type="email" asp-for="Email" placeholder="email" />
            }
            else
            {
            <input type="email" asp-for="Email" placeholder="email" autofocus />
            }
            <span asp-validation-for="Email"></span>
        </div>
        <div class="field">
            <label asp-for="Password">Password</label>
            @if (Model.Email != null)
            {
            <input type="password" asp-for="Password" placeholder="password" autofocus />
            }
            else
            {
            <input type="password" asp-for="Password" placeholder="password" />
            }
            <span asp-validation-for="Password"></span>
        </div>
        <div class="field" style="display:none">
            <label asp-for="LeaveBlank">Leave blank</label>
            <input type="text" asp-for="LeaveBlank" placeholder="leave blank" autocomplete="off" />
            <span asp-validation-for="LeaveBlank"></span>
        </div>
        <div class="field">
            <input type="submit" value="Sign in" />
        </div>
        @await Html.PartialAsync("_StaySignedIn", new SimpleIAM.IdAuthority.UI.Authenticate.SessionLengthViewModel(Model.SessionLengthMinutes))
    </form>

    <p class="hint">
        Forgot password? <a asp-action="SignIn" asp-route-returnUrl="@Model.ReturnUrl">Sign in with email</a>
    </p>
</div>